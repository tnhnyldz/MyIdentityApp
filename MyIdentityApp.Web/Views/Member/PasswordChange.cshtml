@{
	ViewData["Title"] = "PasswordChange";
}
@model PasswordChangeViewModel
@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
	<div class="col-md-8 offset-md-2">
		<h2 class="mb-4">Şifre Yenileme </h2>
		@if (TempData["SucseedMessage"] is not null)
		{
			<div class="alert alert-info" role="alert">
				@TempData["SucseedMessage"]
			</div>
		}
		@* if key section is empty ModelOnly will works *@
		<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
		</div>
		<form asp-controller="Member" asp-action="PasswordChange" method="post">
			<div class="row mb-3">
				<label for="PasswordOld" class="col-sm-2 col-form-label" asp-for="PasswordOld"></label>
				<div class="col-sm-10">
					<input asp-for="PasswordOld" class="form-control">
					<span class="text-danger" asp-validation-for="PasswordOld"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="PasswordNew" class="col-sm-2 col-form-label" asp-for="PasswordNew"></label>
				<div class="col-sm-10">
					<input asp-for="PasswordNew" class="form-control">
					<span class="text-danger" asp-validation-for="PasswordNew"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="PasswordNewConfirm" class="col-sm-2 col-form-label" asp-for="PasswordNewConfirm"></label>
				<div class="col-sm-10">
					<input asp-for="PasswordNewConfirm" class="form-control">
					<span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
				</div>
			</div>
			<div class="row mb-3 d-flex justify-content-center">
				<button type="submit" class="btn btn-primary w-25">Şifre değiştir</button>
			</div>
		</form>
	</div>
</div>

