
@{
    ViewData["Title"] = "ResetPassword";
}
@model ResetPasswordViewModel


<div class="row">
	<div class="col-md-8 offset-md-2">
		
		@if (TempData["SucseedMessage"] is not null)
		{
			<div class="alert alert-info" role="alert">
				@TempData["SucseedMessage"]
			</div>
		}
		@* if key section is empty ModelOnly will works *@
		<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
		</div>
		<form method="post">
			<div class="col-md-8 offset-md-4"><h2 class="mb-4">Yeni Şifre Oluşturma</h2></div>
			<div class="row mb-3">
				<label for="Password" class="col-sm-2 col-form-label" asp-for="Password"></label>
				<div class="col-sm-10">
					<input asp-for="Password" class="form-control">
					<span class="text-danger" asp-validation-for="Password"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="PasswordConfirm" class="col-sm-2 col-form-label" asp-for="PasswordConfirm"></label>
				<div class="col-sm-10">
					<input  asp-for="PasswordConfirm" class="form-control">
					<span class="text-danger" asp-validation-for="PasswordConfirm"></span>
				</div>
			</div>
			<div class="row mb-3 d-flex justify-content-center">
				<button type="submit" class="btn btn-primary w-25">Şifre Yenile</button>
			</div>
		</form>
	</div>
</div>
