@{
	ViewData["Title"] = "ResetPassword";
}
@model ForgotPasswordViewModel
@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
	<div class="col-md-4 offset-md-4">
		@if (TempData["SucseedMessage"] is not null)
		{
			<div class="alert alert-success" role="alert">
				@TempData["SucseedMessage"]
			</div>
		}
		<div class="alert alert-info">Şifre yenileme link e posta adresinize gelecektir.</div>
		<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
		</div>
		@* it goes /home/resetpassword *@
		<form method="post">
			<div class="mb-3">
				<label for="Email" class="form-label" asp-for="Email"></label>
				<input asp-for="Email" class="form-control">
				<span class="text-danger" asp-validation-for="Email"></span>
			</div>
			<button type="submit" class="btn btn-primary">Gönder</button>
		</form>
	</div>
</div>
