@{
	ViewData["Title"] = "UserEdit";
}
@model UserEditViewModel
@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
	<div class="col-md-8 offset-md-2">
		<h2 class="mb-4">Kullanıcı Bilgi Güncelleme</h2>
		@if (TempData["SucseedMessage"] is not null)
		{
			<div class="alert alert-info" role="alert">
				@TempData["SucseedMessage"]
			</div>
		}
		@* if key section is empty ModelOnly will works *@
		<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
		</div>
		<form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label for="UserName" class="col-sm-2 col-form-label" asp-for="UserName"></label>
				<div class="col-sm-10">
					<input asp-for="UserName" class="form-control">
					<span class="text-danger" asp-validation-for="UserName"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
				<div class="col-sm-10">
					<input asp-for="Email" class="form-control">
					<span class="text-danger" asp-validation-for="Email"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="Phone" class="col-sm-2 col-form-label" asp-for="Phone"></label>
				<div class="col-sm-10">
					<input asp-for="Phone" class="form-control">
					<span class="text-danger" asp-validation-for="Phone"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="BirthDate" class="col-sm-2 col-form-label" asp-for="BirthDate"></label>
				<div class="col-sm-10">
					<input asp-for="BirthDate" class="form-control">
					<span class="text-danger" asp-validation-for="BirthDate"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="City" class="col-sm-2 col-form-label" asp-for="City"></label>
				<div class="col-sm-10">
					<input asp-for="City" class="form-control">
					<span class="text-danger" asp-validation-for="City"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="Gender" class="col-sm-2 col-form-label" asp-for="Gender"></label>
				<div class="col-sm-10">
					<select class="form-control" asp-for="Gender" asp-items="ViewBag.GenderList">
						<option value="">Cinsiyet seçiniz</option>
					</select>
					<span class="text-danger" asp-validation-for="Gender"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label for="Picture" class="col-sm-2 col-form-label" asp-for="Picture"></label>
				<div class="col-sm-10">
					<input class="form-control" type="file" asp-for="Picture" />
					<span class="text-danger" asp-validation-for="Picture"></span>
				</div>
			</div>
			<div class="row mb-3 d-flex justify-content-center">
				<button type="submit" class="btn btn-primary w-25">Bilgi Güncelle</button>
			</div>
		</form>
	</div>
</div>

